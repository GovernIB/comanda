        <subsystem xmlns="urn:jboss:domain:mail:4.0">
            <mail-session name="default" jndi-name="java:jboss/mail/Default">
                <smtp-server outbound-socket-binding-ref="mail-smtp"/>
            </mail-session>
            <mail-session name="comanda" jndi-name="java:jboss/mail/ComandaSession">
                <smtp-server username="${env.JBOSS_MAIL_USERNAME}" password="${env.JBOSS_MAIL_PASSWORD}" ssl="${env.JBOSS_MAIL_SSL}" tls="${env.JBOSS_MAIL_TLS}" outbound-socket-binding-ref="smtp-comanda"/>
            </mail-session>
        </subsystem>